<div class="clearfix"></div>
<div class="container_fullwidth sign-up-page">
  <%= render "shared/banner_page", title: t("shared.login.sign_up"), breadscrumb: [{url: "/", title: t("layouts.header.home")}, {url: "/users/sign_up", title: t("shared.login.sign_up")}] %>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-xs-12 col-md-offset-3">
        <div class="table">
          <div class="table-cell">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <br />
            <div class="field text-left">
              <%= f.label :email, t("shared.sign_up.email") %>:<br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email",
                      class: "form-control"%>
            </div>
            <br />
            <div class="field text-left">
              <%= f.label :name, t("shared.sign_up.name") %>:<br />
              <%= f.text_field :name, autofocus: true, autocomplete: "name",
                      class: "form-control" %>
            </div>
            <br />
            <div class="field text-left">
              <%= f.label :phone, t("shared.sign_up.phone") %>:<br />
              <%= f.telephone_field :phone, autocomplete: "phone",
                      class: "form-control" %>
            </div>
            <br />
            <div class="field text-left">
              <%= f.label :password, t("shared.sign_up.password") %>:
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> <%= t"shared.sign_up.characters_minimum" %>)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>
            <br />
            <div class="field text-left">
              <%= f.label :password_confirmation, t("shared.sign_up.password_confirm") %>:<br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
            <br />
            <div class="actions text-center">
              <%= f.submit t("shared.sign_up.sign_up"), class: "btn btn-primary" %>
            </div>
            <% end %>
            <br />
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>