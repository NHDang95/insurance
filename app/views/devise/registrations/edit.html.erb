<div class="clearfix"></div>
<div class="container_fullwidth">
  <%= render "shared/banner_page", title: 'Chỉnh sửa thông tin Thành Viên', breadscrumb: [{url: "/", title: 'Trang chủ'}, {url: "/users/edit", title: 'Thông tin Thành Viên'}] %>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-xs-12 col-md-offset-3">
        <div class="table">
          <div class="table-cell">
            <br />
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <br />
            <div class="field text-left">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
            <br />
            <div class="field text-left">
              <%= f.label :name %>:<br />
              <%= f.text_field :name, autocomplete: "name", class: "form-control" %>
            </div>
            <br />
            <div class="field text-left">
              <%= f.label :phone %>:<br />
              <%= f.telephone_field :phone, class: "form-control" %>
            </div>
            <br />
            <div class="field text-left">
              <%= f.label :password %>: <i>(<%= t".leave_blank_if_you_dont_want_to_change_it" %>)</i><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>
            <br />
            <div class="field text-left">
              <%= f.label :password_confirmation %>:<br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
            <br />
            <div class="field text-left">
              <%= f.label :current_password %><i>(<%= t".only_required_if_you_want_to_change_password" %>)</i><br />
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
            </div>
            <br />
            <div class="actions text-center">
              <%= f.submit "Update", class: "btn btn-primary" %>
            </div>
            <% end %>
            <br />
            <h3><%= t".cancel_my_account" %></h3>
            <p><%= t".unhappy" %> <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>