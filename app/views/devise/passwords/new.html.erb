<div class="clearfix"></div>
<div class="container_fullwidth sign-up-page">
	<%= render "shared/banner_page", title: t("devise.passwords.title"), breadscrumb: [{url: "/", title: t("layouts.header.home")}, {url: "/users/password/new.user", title: t("devise.passwords.title")}] %>
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-xs-12 col-md-offset-3">
				<div class="table">
					<div class="table-cell">
						<%= form_for(resource, as: resource_name, url: user_password_path(locale: I18n.locale), html: { method: :post }) do |f| %>
						<%= render "devise/shared/error_messages", resource: resource %>
						<br />
						<div class="field">
							<%= f.label :email, t("shared.sign_up.email") %>:<br />
							<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
						</div>
						<br />
						<div class="actions text-center">
							<%= f.submit t("devise.passwords.send"), class: "btn btn-primary" %>
						</div>
						<% end %>
						<br />
						<%= render "devise/shared/links" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>