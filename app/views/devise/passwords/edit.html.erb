<div class="clearfix"></div>
<div class="container_fullwidth sign-up-page">
  <%= render "shared/banner_page", title: t("devise.password.title"), breadscrumb: [{url: "/", title: t("layouts.header.home")}, {url: "/users/password/new.user", title: t("devise.password.title")}] %>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-xs-12 col-md-offset-3">
        <div class="table">
          <div class="table-cell">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>
            <br />
            <div class="field">
              <%= f.label :password, t("shared.sign_up.password") %><br />
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> <%= t"shared.sign_up.characters_minimum" %>)</em>
              <% end %><br />
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
            </div>
            <br />
            <div class="field">
              <%= f.label :password_confirmation, t("shared.sign_up.password_confirm") %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
            <br />
            <div class="actions text-center">
              <%= f.submit t(".update"), class: "btn btn-primary" %>
            </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>