<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h2 class="page-header title"><%= t ".user_list" %></h2>
      </div>
    </div>
    <%#= search_form_for @q, url: admin_users_path do |f| %>
      <div class="input-group mb-5">
        <%#= f.search_field :name_or_email_cont,
          placeholder: t(".name_or_email_cont"), class: "form-control" %>
        <div class="input-group-btn">
          <%#= button_tag type: "submit", class: "btn btn-default" do %>
            <i class="fa fa-search"></i>
          <%# end %>
        </div>
      </div>
      <div class="text-center">
        <div class="display-category"><%= t "admin.users.index.display_details" %></div>
        <%#= select_tag :limit, options_from_collection_for_select(
          Settings.show_limit, :second, :second, selected: params[:limit] ||
          Settings.show_limit.show_15), id: "show-limit"%>
      </div>
    <%# end %>
    <div class="text-center">
      <%#= paginate @users %><br>
      <%#= page_entries_info @users %>

    </div>
    <table class="table table-bordered mt-5" >
      <thead>
        <tr class="bold">
          <!--<th><%#= sort_link @q, :name, t(".name") %></th>
          <th><%#= sort_link @q, :email, t(".email") %></th>-->
          <th><%= t "shared.sign_up.name" %></th>
          <th><%= t "shared.sign_up.email" %></th>          
          <th><%= t "shared.sign_up.phone" %></th>
          <th><%= t "shared.sign_up.address" %></th>
          <th><%= t ".action" %></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr style="text-align: center;">
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.phone %></td>
            <td><%= user.address %></td>
            <% unless user.admin? %>
              <td class="text-center">
                <%= link_to t(".delete"), admin_user_path(user),
                  method: :delete, data: {confirm: t("shared.message.you_sure")},
                  class: "btn btn-danger" %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-center">
      <%= will_paginate @users, :previous_label => t("shared.previous"), :next_label => t("shared.next") %>
    </div>
  </div>
</div>
