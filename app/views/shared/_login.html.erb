<div class="modal fade" id="loginModal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          &times;
        </button>
        <h4><%= t ".login" %></h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-12">
            <%= form_for(:user, url: session_path(:user)) do |f| %>
            <form role="form">
              <div class="form-group">
                <%= f.label :email, t("devise.sessions.new.email") %>:<br />
                <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :password, t("devise.sessions.new.password") %>:<br />
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
              </div>
              <div class="form-group checkbox">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, t("devise.sessions.new.remember") %>
              </div>
              <%= f.submit t(".login"), class: "btn btn-success btn-block" %>
            </form>
            <% end %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="row">
          <div class="col-md-12">
            <span>
              <%= t ".not_a_member" %>
              <%= link_to t(".sign_up"), new_registration_path(:user), class: "modal-link" %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>