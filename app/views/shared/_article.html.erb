<% @articles.each do |article| %>
<section>
  <div class="panel col-sm-6 text-center" style="visibility: visible; background-color: #f0f0f0">
    <div class="panel-heading" role="tab">
      <h2 class="panel-title">
      <span><b><%= truncate(article.title, length: 40) %></b></span>
      </h2>
    </div>
    <div class="panel-body">
      <div style="float: left;">
        <%= image_tag article.image_url(:thumb) if article.image? %>
        <h6><i class="fa fa-calendar"> <%= article.created_at.strftime("%d/%m/%Y") %></i></h6>
      </div>
      <div>
        <p><%= truncate(article.description, length: 110) %></p>
      </div>
    </div>
    <div class="panel-footer">
      <i style="float: right;"><%= link_to t("static_pages.home.more_detail"), article_path(article, locale: I18n.locale), class: "btn btn-success" %></i>
    </div>
</section>
<% end %>
<section style="visibility: visible; background-color: #f0f0f0; float: right;">
  <div class="row">
    <div class="col-xs-12 text-center">
      <a><h3 class="text-uppercase"><%= link_to t("shared.all_articles"), articles_path(locale: I18n.locale), class: "btn btn-success" %></h3></a>
    </div>
  </div>
</section>