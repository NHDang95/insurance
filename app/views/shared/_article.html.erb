<% @articles.each do |article| %>
<section class="wow">
  <div class="panel col-sm-4 text-center" style="visibility: visible; background-color: #DEE4E7">
    <div class="panel-heading" role="tab">
      <h2 class="panel-title">
      <span><b><%= truncate(article.title, length: 30) %></b></span>
      </h2>
    </div>
    <div class="panel-body">
      <div class="card-img-top" style="float: left;">
        <%= image_tag article.image_url(:thumb) if article.image? %>
              <h6><%= time_ago_in_words(article.created_at) %><%= t("shared.ago") %></h6>
      </div>
      <div>
        <p><%= truncate(article.description, length: 60) %></p>
      </div>
      <div>
        <ul>
          <li style="float: right;"><%= link_to t("static_pages.home.more_detail"), article_path(article, locale: I18n.locale), class: "btn btn-info" %>
        </ul>
      </div>
    </div>
  </div>
</section>
<% end %>
<section style="visibility: visible; background-color: lightblue">
  <div class="row">
    <div class="col-xs-12 text-center">
      <a><h3 class="text-uppercase"><%= link_to t("shared.all_articles"), articles_path(locale: I18n.locale) %></h3></a>
    </div>
  </div>
</section>