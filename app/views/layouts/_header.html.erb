<body id="home">
  <div class="wrapper">
    <div class="header">
      <div class="container">
        <div class="row">
          <div class="col-md-2 col-sm-2">
            <div class="logo"><%= link_to(image_tag("logo.jpg", size: '90'), root_path) %></div>
          </div>
          <div class="col-md-10 col-sm-10">
            <div class="header_top">
              <div class="row">
                <div class="col-md-8">
                  <ul class="usermenu contact">
                    <li>
                      <p class="add"> <%= t".address" %> </p>
                    </li>
                    <li>
                      <p class="hotline"> <%= t".hotline" %> </p>
                    </li>
                  </ul>
                </div>
                <div class="col-md-4">
                  <ul class="usermenu">
                    <% if user_signed_in? %>
                    <li>
                      <% if current_user.admin? %>
                      <div class="dropdown">
                        <%= link_to current_user.name, admin_dashboard_path,
                        class: "user dropbtn" %>
                      </div>
                      <% else %>
                      <div class="dropdown">
                        <%= link_to current_user.name,
                        edit_user_registration_path, class: "user" %>
                      </div>
                      <% end %>
                    </li>
                    <li>
                      <%= link_to t(".logout"), destroy_user_session_path(locale: I18n.locale),
                      method: :delete, class: "logout" %>
                    </li>
                    <% else %>
                    <li>
                      <%= link_to t(".sign_up"), "#",
                      data: {toggle: "modal", target: "#signupModal"},
                      class: "reg" %>
                      <%= render "shared/sign_up" %>
                    </li>
                    <li>
                      <%= link_to t(".login"), "#",
                      data: {toggle: "modal", target: "#loginModal"},
                      class: "login" %>
                      <%= render "shared/login" %>
                    </li>
                    <% end %>
                  </ul>
                  <ul class="option_nav">
                    <li class="dropdown">
                      <a href="#"><%= I18n.locale %></a>
                      <ul class="subnav">
                        <li><%= link_to t(".vietnam"), locale:"vi" %></li>
                        <li><%= link_to t(".english"), locale:"en" %></li>
                      </ul>
                    </li>
                  </ul>
                </div>
                </div> <!-- end row -->
                </div> <!-- end header top -->
                <div class="clearfix"></div>
                <div class="header_bottom">
                  <!-- <ul class="option">
                    <li id="search" class="search">
                      <%#= form_tag search_path, method: :get, id: "livesearch_form" do %>
                      <%#= submit_tag "", class: "search-submit" %>
                      <%#= text_field_tag :search, params[:search],
                      class: "search-input dropdown-toggle", placeholder: t(".search"),
                      "data-toggle": "dropdown", "aria-hidden": :true,
                      autocomplete: :off, required: true, id: "livesearch_input" %>
                      <ul class="dropdown-menu list_search">
                        <div id="livesearch_dom"></div>
                      </ul>
                      <%# end %>
                    </li>
                  </ul> -->
                  <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                      <li class="dropdown">
                        <%= link_to t(".home"), root_path %>
                      </li>
                      <% @all_categories.each do |category| %>
                      <% if category.descendants.present? %>
                      <li class="dropdown">
                        <a class="dropdown-toggle"><%= t("#{category.name}") %></a>
                        <div class="dropdown-menu mega-menu">
                          <div class="row">
                            <div class="col-md-6 col-sm-6">
                              <ul class="mega-menu-links">
                                <% category.children.each do |children| %>
                                <li>
                                  <%= link_to t("#{children.name}"), children %>
                                </li>
                                <% end %>
                              </ul>
                            </div>
                          </div>
                        </div>
                      </li>
                      <% end %>
                      <% end %>
                      <li class="dropdown">
                        <%= link_to t(".article"), articles_path(locale: I18n.locale) %>
                      </li>
                      <li class="dropdown">
                        <%= link_to t(".contact"), static_pages_about_url(locale: I18n.locale) %>
                      </li>
                      <li class="dropdown">
                        <a class="dropdown-toggle" href="#"><%= t".help" %></a>
                        <div class="dropdown-menu mega-menu">
                          <ul class="mega-menu-links">
                            <li><%= link_to t(".rights"), static_pages_rights_url(locale: I18n.locale) %></li>
                            <li><%= link_to t(".fee_type"), static_pages_fee_url(locale: I18n.locale) %></li>
                          </ul>
                        </div>
                      </li>
                    </ul>
                    </div> <!-- end collapse -->
                    </div> <!-- end header-bottom -->
                    </div> <!-- end col-md-10 -->
                    </div> <!-- end row -->
                    </div> <!-- end container -->
                    </div> <!-- end header -->
                  </div>
                </body>